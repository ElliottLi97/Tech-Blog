<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-sm btn-danger" id="comment-render">Add a Comment</button>
  </p>
  <p id = "comment-writing">
    <textarea class="form-input" id="comment-box" name="comment-box"></textarea>
    <button class="btn btn-sm btn-link" id="testing" type="submit" data-id="{{id}}">Post Comment</button>
  </p>


  {{#each comments as |comment|}}
  <div id="post-container">
    <div id="post-header"></div>
    <div id="post-body">
      <p>{{comment.content}}</p>
      <p>-{{comment.user.name}}, {{format_date comment.date_created}}</p>
    </div>
  </div>
  {{/each}}
</div>

<script src="/js/post.js"></script>
